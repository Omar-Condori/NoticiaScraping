{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Scraping de Noticias con Autenticaci贸n JWT",
    "description": "API REST para scrapear, almacenar y gestionar noticias de m煤ltiples fuentes con autenticaci贸n segura",
    "version": "3.0.0",
    "contact": {
      "name": "API Support"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8001",
      "description": "Servidor de desarrollo local"
    }
  ],
  "tags": [
    {
      "name": "Autenticaci贸n",
