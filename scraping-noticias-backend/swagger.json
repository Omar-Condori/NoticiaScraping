        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "limite",
            "in": "query",
            "schema": {"type": "integer", "default": 5}
          },
          {
            "name": "fuente_id",
            "in": "query",
            "schema": {"type": "integer"}
          }
        ],
        "responses": {
          "200": {"description": "Scraping ejecutado exitosamente"},
          "401": {"description": "Token JWT requerido"}
