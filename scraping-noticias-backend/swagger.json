          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UsuarioLogin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login exitoso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {"type": "boolean"},
                    "mensaje": {"type": "string"},
                    "usuario": {"$ref": "#/components/schemas/Usuario"},
                    "access_token": {"type": "string"}
