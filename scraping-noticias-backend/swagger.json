        "bearerFormat": "JWT",
        "description": "Ingresa el token JWT obtenido del login"
      }
    },
    "schemas": {
      "UsuarioRegistro": {
        "type": "object",
        "required": ["nombre_usuario", "email", "contrasena"],
        "properties": {
          "nombre_usuario": {
            "type": "string",
            "example": "admin"
          },
          "email": {
            "type": "string",
            "example": "admin@ejemplo.com"
          },
          "contrasena": {
            "type": "string",
            "example": "admin123"
          }
        }
      },
      "UsuarioLogin": {
        "type": "object",
        "required": ["nombre_usuario", "contrasena"],
        "properties": {
          "nombre_usuario": {
            "type": "string",
            "example": "admin"
          },
          "contrasena": {
            "type": "string",
            "example": "admin123"
          }
        }
      },
      "Usuario": {
        "type": "object",
        "properties": {
          "id": {"type": "integer"},
          "nombre_usuario": {"type": "string"},
          "email": {"type": "string"},
          "fecha_creacion": {"type": "string"},
          "activo": {"type": "boolean"}
        }
      },
      "Noticia": {
        "type": "object",
        "properties": {
          "titulo": {"type": "string"},
          "url": {"type": "string"},
          "resumen": {"type": "string"},
          "imagen_url": {"type": "string"},
          "categoria": {"type": "string"},
          "fuente": {"type": "string"},
          "fuente_id": {"type": "integer"}
        }
      },
      "Fuente": {
        "type": "object",
        "properties": {
          "id": {"type": "integer"},
          "nombre": {"type": "string"},
          "url": {"type": "string"},
          "activo": {"type": "boolean"}
        }
      },
      "FuenteInput": {
        "type": "object",
        "required": ["nombre", "url"],
        "properties": {
          "nombre": {
            "type": "string",
            "example": "Los Andes Puno"
          },
          "url": {
            "type": "string",
            "example": "https://www.losandes.com.pe/puno/"
          }
        }
      }
    }
  },
  "paths": {
    "/": {
      "get": {
        "tags": ["default"],
        "summary": "Informaci贸n de la API",
        "responses": {
          "200": {
            "description": "Informaci贸n de la API"
          }
        }
      }
    },
